{
  "name": "the-endless-sea-solo",
  "version": "1.0.0",
  "description": "The Endless Sea - Solo: Un jeu d'aventure maritime en solitaire",
  "author": "Wolfgang",
  "main": "main.cjs",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k -r \"yarn vite\" \"yarn electron:dev\"",
    "electron:dev": "cross-env NODE_ENV=development electron ./main.cjs",
    "build": "vite build && node scripts/copy-locales.cjs && node scripts/fix-index-paths.cjs",
    "preview": "vite preview",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "kill:electron": "cmd /c \"taskkill /IM electron.exe /F || exit /b 0\" && cmd /c \"taskkill /IM TheEndlessSea-Solo.exe /F || exit /b 0\"",
    "clean:release": "node scripts/clean-release.cjs",
    "dist:win": "scripts/build-win-admin.bat",
    "dist:linux": "yarn clean:release && electron-builder --linux",
    "dist:mac": "yarn clean:release && electron-builder --mac"
  },
  "dependencies": {
    "@react-three/drei": "^10.0.8",
    "@react-three/fiber": "^9.1.2",
    "@testing-library/dom": "^10.4.0",
    "country-flag-icons": "^1.5.19",
    "i18next": "^25.2.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-i18next": "^15.5.2",
    "three": "^0.176.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19.1.5",
    "@types/three": "^0.176.0",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vitejs/plugin-react": "^4.5.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.3.1",
    "electron-builder": "26.0.15",
    "electron-builder-squirrel-windows": "26.0.15",
    "eslint": "^9.27.0",
    "eslint-plugin-react": "^7.37.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.4",
    "typescript": "^5.8.3",
    "vite": "^6.3.5"
  }
}
